generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PortalDaTransparenciaResource {
  AUXILIO_BRASIL 
  NOVO_BOLSA_FAMILIA
  BOLSA_FAMILIA 
  SEGURO_DEFESO 
  SAFRA 
  PETIT
  BPC 
  AUXILIO_EMERGENCIAL
  CARTOES
}

model PortalDaTransparenciaItem {
  id                  String   @id @default(uuid()) @db.Uuid
  resource PortalDaTransparenciaResource
  apiResponse Json?
}

